{% include 'AcmeBookBundle::base.html.twig' %}
<h1>Author list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Website</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('author_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.website }}</td>
            <td>
                <a href="{{ path('author_show', { 'id': entity.id }) }}"><img src="{{ asset('bundles/acmebook/view.png') }}" title="Show" alt="Show"></a>
                <a href="{{ path('author_edit', { 'id': entity.id }) }}"><img src="{{ asset('bundles/acmebook/edit.png') }}" title="Edit" alt="Edit"></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('author_new') }}">
            Create a new entry
        </a>
    </li>
    <li>
        <a href="{{ path('book') }}">
            List of books
        </a>
    </li>
</ul>
