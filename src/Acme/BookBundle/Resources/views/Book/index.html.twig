{% include 'AcmeBookBundle::base.html.twig' %}

<h1>Book list</h1>
<ul>
    <li>
        <a href="{{ path('book_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Color</th>
            <th>is Novell</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('book_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.price }}</td>
            <td>{{ entity.color }}</td>
            <td align="center">{% if entity.isNovell == 1 %}Yes{% else %}No{% endif %}</td>
            <td>
                <a href="{{ path('book_show', { 'id': entity.id }) }}"><img src="{{ asset('bundles/acmebook/view.png') }}" title="Show" alt="Show"></a>
                <a href="{{ path('book_edit', { 'id': entity.id }) }}"><img src="{{ asset('bundles/acmebook/edit.png') }}" title="Edit" alt="Edit"></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('book_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
